# Maintainer: Vadim Kuznetsov <vimusov@gmail.com>

pkgbase=aiohttp
pkgname=python-$pkgbase
pkgver=1.2.0
pkgrel=1
pkgdesc='HTTP client/server for asyncio'
arch=('x86_64')
url="http://pypi.python.org/pypi/$pkgbase"
license=('Apache')
depends=('python' 'python-chardet' 'python-multidict' 'python-async-timeout' 'python-yarl')
makedepends=('python-setuptools' 'git')
source=("https://github.com/KeepSafe/${pkgbase}/archive/v${pkgver}.tar.gz")
md5sums=('b88dc24c8ec37c0c66d7f9b7ba477eed')

build()
{
    cd "$srcdir"/"${pkgbase}-$pkgver"
    python setup.py build
}

package()
{
    cd "$srcdir"/"${pkgbase}-$pkgver"
    python setup.py install --skip-build --optimize=1 --root="$pkgdir"
}
